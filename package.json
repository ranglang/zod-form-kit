{
  "name": "react-zod-form-generator",
  "version": "1.0.0",
  "description": "Automatic React form generation from Zod schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
