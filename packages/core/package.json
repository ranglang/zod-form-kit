{
  "name": "zod-form-kit",
  "version": "1.0.0",
  "description": "UI-agnostic form generation library based on Zod schemas with extensible adapter pattern",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "ladle": "ladle serve",
    "ladle:build": "ladle build",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "format": "biome format . --write",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tanstack/react-form": "^0.29.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@ladle/react": "^5.0.3",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.1.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "keywords": [
    "zod",
    "forms",
    "typescript",
    "validation",
    "form-generator",
    "ui-agnostic",
    "adapter-pattern",
    "schema-driven",
    "framework-agnostic",
    "zod-form-kit"
  ],
  "author": "Your Name",
  "license": "MIT"
} 